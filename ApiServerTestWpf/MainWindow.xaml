<Window x:Class="ApiServerTestWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApiServerTestWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBox x:Name="tbUrlApi"
                     Width="250"
                     Height="25"
                     Text="https://localhost:44369/UploadFiles">
                
            </TextBox>

            <Button Content="UploadFile"
                    Width="100"
                    Height="22"
                    x:Name="btnStartUpload" Click="btnStartUpload_Click"/>
        </StackPanel>
    </Grid>
</Window>
